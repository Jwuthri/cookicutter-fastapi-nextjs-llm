# =============================================================================
# {{cookiecutter.project_name}} - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit your .env file to version control!


# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="{{cookiecutter.project_name}}"
APP_VERSION="{{cookiecutter.version}}"
DESCRIPTION="{{cookiecutter.description}}"
ENVIRONMENT=development
DEBUG=true


# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT={{cookiecutter.backend_port}}
RELOAD=true
WORKERS=1


# =============================================================================
# Authentication - Clerk
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here
CLERK_JWT_KEY=your-clerk-jwt-verification-key-here


# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL={% if cookiecutter.include_database == "postgresql" %}postgresql://postgres:postgres@localhost:{{cookiecutter.postgres_port}}/{{cookiecutter.project_slug}}{% elif cookiecutter.include_database == "sqlite" %}sqlite:///./data/{{cookiecutter.project_slug}}.db{% endif %}


# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5


# =============================================================================
# LLM Configuration - OpenRouter
# =============================================================================
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=your-openrouter-api-key-here
DEFAULT_MODEL={{cookiecutter.default_model}}
MAX_TOKENS=512
TEMPERATURE=0.33


# =============================================================================
# LLM Observability - Langfuse (Optional)
# =============================================================================
# Enable Langfuse for LLM tracing and observability
# Get your keys from: https://cloud.langfuse.com
LANGFUSE_ENABLED=false
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_BASE_URL=https://cloud.langfuse.com
# For EU region: https://cloud.langfuse.com
# For US region: https://us.cloud.langfuse.com


# =============================================================================
# VECTOR DB
# =============================================================================
# Qdrant / Pinecone / ...
VECTOR_DB_API_KEY=your-qdrant-api-key-here
VECTOR_DB_URL=https://your-cluster-id.region.cloud.qdrant.io
VECTOR_DB_INDEX_NAME=your-index-name
VECTOR_DB_ENVIRONMENT=your-environment


# =============================================================================
# LangChain Tracing (LangSmith) - Optional
# =============================================================================
# LangChain tracing sends traces to LangSmith for observability.
# Get your API key from: https://smith.langchain.com

LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-api-key
LANGCHAIN_PROJECT="{{cookiecutter.project_name}}"

# =============================================================================
# Task Queue - Celery (Optional)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=false


# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:{{cookiecutter.frontend_port}},http://127.0.0.1:{{cookiecutter.frontend_port}}


# =============================================================================
# Monitoring & Observability (Optional)
# =============================================================================
ENABLE_METRICS=false
