# {{cookiecutter.project_name}} Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="{{cookiecutter.project_name}}"
APP_VERSION="{{cookiecutter.version}}"
DESCRIPTION="{{cookiecutter.description}}"
ENVIRONMENT=development
DEBUG=true

# Server Configuration  
HOST=0.0.0.0
PORT={{cookiecutter.backend_port}}
RELOAD=true
WORKERS=1

# Security Settings (IMPORTANT: Change these in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here
CLERK_JWT_KEY=your-clerk-jwt-verification-key-here

# Password Policy (for legacy auth - Clerk handles this)
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# Database Configuration
{% if cookiecutter.include_database == "postgresql" %}
DATABASE_URL=postgresql://postgres:postgres@localhost:{{cookiecutter.postgres_port}}/{{cookiecutter.project_slug}}
{% elif cookiecutter.include_database == "sqlite" %}
DATABASE_URL=sqlite:///./data/{{cookiecutter.project_slug}}.db
{% endif %}

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5

# LLM Configuration
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=your-openrouter-api-key-here
DEFAULT_MODEL={{cookiecutter.default_model}}
MAX_TOKENS=1000
TEMPERATURE=0.7

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:{{cookiecutter.frontend_port}},http://127.0.0.1:{{cookiecutter.frontend_port}}

# Optional: Monitoring
ENABLE_METRICS=false
ENABLE_TRACING=false
