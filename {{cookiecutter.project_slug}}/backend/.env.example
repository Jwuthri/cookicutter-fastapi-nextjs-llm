# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration  
HOST=0.0.0.0
PORT={{cookiecutter.backend_port}}
RELOAD=true
WORKERS=1

# Database Configuration
{% if cookiecutter.include_database == "postgresql" %}
DATABASE_URL=postgresql://postgres:postgres@localhost:{{cookiecutter.postgres_port}}/{{cookiecutter.project_slug}}
{% elif cookiecutter.include_database == "sqlite" %}
DATABASE_URL=sqlite:///./data/{{cookiecutter.project_slug}}.db
{% else %}
# DATABASE_URL=your-database-url-here
{% endif %}

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID={{cookiecutter.project_slug}}_backend
KAFKA_AUTO_OFFSET_RESET=latest

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_CONNECTION_TIMEOUT=30

# LLM Configuration
LLM_PROVIDER={{cookiecutter.llm_provider}}
{% if cookiecutter.llm_provider == "openai" %}
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
{% elif cookiecutter.llm_provider == "anthropic" %}
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000
{% elif cookiecutter.llm_provider == "huggingface" %}
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_DEVICE=cpu
{% endif %}

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_EXPIRE_SECONDS=86400
MAX_MESSAGES_PER_SESSION=100

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# WebSocket Configuration
WEBSOCKET_ENABLED={% if cookiecutter.use_websockets == "yes" %}true{% else %}false{% endif %}
WEBSOCKET_HEARTBEAT_INTERVAL=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:{{cookiecutter.frontend_port}},http://127.0.0.1:{{cookiecutter.frontend_port}}
